<resources>

    <style name="style_theme_material">
        <item name="background_color">@color/theme_material_background</item>
        <item name="icon_color">@color/theme_material_foreground</item>
    </style>

    <style name="style_theme_material_light">
        <item name="background_color">@color/theme_material_light_background</item>
        <item name="icon_color">@color/theme_material_light_foreground</item>
    </style>

    <style name="style_theme_material_blue_grey">
        <item name="background_color">@color/theme_material_blue_grey_background</item>
        <item name="icon_color">@color/theme_material_blue_grey_foreground</item>
    </style>

    <style name="style_theme_holo">
        <item name="background_color">@color/theme_holo_background</item>
        <item name="icon_color">@color/theme_holo_foreground</item>
    </style>

    <style name="style_theme_holo_light">
        <item name="background_color">@color/theme_holo_light_background</item>
        <item name="icon_color">@color/theme_holo_light_foreground</item>
    </style>

    <style name="style_image_button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:scaleType">centerInside</item>
    </style>

    <style name="style_image_button_compat" parent="@style/style_image_button">
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="style_widget_layout">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="style_dialog_row" parent="@style/style_widget_layout">
        <item name="android:orientation">horizontal</item>
        <item name="android:showDividers">middle</item>
        <item name="android:divider">@drawable/dialog_col_divider</item>
    </style>

</resources>